<div class='content'>
	<%= form_for @question, url: question_path(@question) do |f| %>
	<%= f.label :title %>:
	<%= f.text_field :title %><br>

	<%= f.label :content %>
	<%= f.text_area :content %><br>

  <%= f.label :all_tags %>
  <%= f.text_area :all_tags %><br>

	<%= f.submit %>
	<% end %>
	<%= flash[:errors] %>
</div>